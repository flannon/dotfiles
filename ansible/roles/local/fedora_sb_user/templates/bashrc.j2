# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific environment
PATH="/usr/local/bin/packer:${HOME}/.local/bin:${HOME}/bin:/var/lib/snapd/snap/bin:${PATH}"
export PATH

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# User specific aliases and functions
alias c=clear
alias lo="exit"
alias ls="ls -F"
alias rm="rm -i"
alias ssh="ssh -o VisualHostKey=yes"
alias vi=vim
alias v=/usr/bin/vi
alias more=less
alias enter="toolbox enter -c $USER"
alias vundleinstall="vim +PluginInstall +qall"
alias code="toolbox run -c $USER bash -c 'code'"
alias bfg="java -jar ~/bin/bfg.jar"

set -o vi

export COLUMNS=110

export GOPATH=${HOME}/go

export GOPATH_K8S=${HOME}/go/src/k8s.io/kubernetes
export PATH=${GOPATH_K8S}/third_party/etcd:${GOPATH}/bin:${PATH}

# env vars
#export TF_CLI_ARGS_APPLY="-auto-approve"
export TF_PLUGIN_CACHE_DIR="${HOME}/.terraform.d/plugin-cache"

#  openstack env vars
[[ -f ${HOME}/.ssh/brooklyn-ca-bundle.trust.crt ]] && \
  export OS_CACERT="${HOME}/.ssh/brooklyn-ca-bundle.trust.crt"

export OS_CACERT=~/.ssh/brooklyn-ca-bundle.trust.crt

#export MINISHIFT_USERNAME=
#export MINISHIFT_PASSWORD=
export MINISHIFT_CPUS=4
export MINISHIFT_DISK_SIZE=40GB
export MINISHIFT_VM_DRIVER=virtualbox
export MINISHIFT_MEMORY=8192


[[ -f "/var/home/{{ user }}/google-cloud-sdk/path.bash.inc" ]] && \
        source "/var/home/{{ user }}/google-cloud-sdk/path.bash.inc"

# The next line enables bash completion for gcloud.
[[ -f "/var/home/{{ user }}/google-cloud-sdk/completion.bash.inc" ]] && \
        source '/var/home/{{ user }}/google-cloud-sdk/completion.bash.inc'

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

